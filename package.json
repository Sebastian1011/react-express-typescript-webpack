{
    "version": "1.0.0",
    "author": {
        "name": "Sebastian",
        "email": "zzmbpt@163.com",
        "url": "http://zmzhang.me"
    },
    "description": "boilerplate with ES6, Typescript, Express.js, and Webpack",
    "license": "MIT",
    "engines": {
        "node": "8.11.2"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Sebastian1011/react-express-typescript-webpack"
    },
    "scripts": {
        "watch-ts": "tsc -w -p src/server --outDir build-dev/server",
        "dev-server": "cross-env NODE_ENV=development nodemon build-dev/server",
        "dev": "concurrently --kill-others \"npm run watch-ts\" \"npm run dev-server\"",
        "start": "cross-env NODE_ENV=production node build/server",
        "build": "npm run build:client && npm run build:server",
        "build:client": "cross-env NODE_ENV=production webpack -p --progress --config=config/webpack.config.prod.js",
        "build:server": "tsc -p src/server --outDir build/server",
        "lint": "eslint --ignore-path .gitignore --ignore-pattern node_modules -- .",
        "prettier": "prettier --ignore-path .gitignore --write './src/**/*.tsx' './src/**/*.ts' './src/**/*.js'",
        "test": "exit 1",
        "release:patch": "npm run lint && npx standard-version -r patch && git push --follow-tags origin master",
        "release:minor": "npm run lint && npx standard-version -r minor && git push --follow-tags origin master",
        "release:major": "npm run lint && npx standard-version -r major && git push --follow-tags origin master",
        "tsc": "tsc"
    },
    "postcss": {},
    "devDependencies": {
        "@types/compression": "0.0.36",
        "@types/express": "^4.16.0",
        "@types/intl": "^1.2.0",
